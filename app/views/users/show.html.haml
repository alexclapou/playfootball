%div.profile-tabs.pt-5
  %ul.nav.items-profile-tabs{:role => "tablist"}
    %li.nav-item{:role => "presentation"}
      %a.tab-link.active{"data-bs-toggle" => "tab", :href => "#tab-1", :role => "tab"}
        =t('profile.profile')
    %li.nav-item{:role => "presentation"}
      %a.tab-link{"data-bs-toggle" => "tab", :href => "#tab-2", :role => "tab"}
        =t('profile.settings')
    %li.nav-item{:role => "presentation"}
      %a.tab-link{"data-bs-toggle" => "tab", :href => "#tab-3", :role => "tab"}
        =t('profile.lang_theme')
  .separate-line
  .tab-content
    #tab-1.tab-pane{:role => "tabpanel"}
      %p Content for tab 1.
    #tab-2.tab-pane{:role => "tabpanel"}
      %p Content for tab 2.
    #tab-3.tab-pane.active{:role => "tabpanel"}
      =render partial: 'theme_lang_selector'